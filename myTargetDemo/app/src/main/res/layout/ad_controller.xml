<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.my.targetDemoApp.views.MidrollSeekbar
            android:id="@+id/midroll_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>


        <Button
            android:id="@+id/btn_visit_advertizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background_onvideo"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Visit advertiser"
            android:textColor="@android:color/white"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/tv_can_close_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_onvideo"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@android:color/white"
            android:visibility="visible"

            />


        <Button
            android:id="@+id/btn_instream_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_onvideo"
            android:drawableRight="@drawable/ic_skip_ad"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Skip banner"
            android:textColor="@android:color/white"
            android:visibility="visible"
            />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/ic_volume_on"
            android:onClick="switchVolume"
            />
    </RelativeLayout>


</FrameLayout>